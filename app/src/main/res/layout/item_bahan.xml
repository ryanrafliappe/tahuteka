<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/roundedstroke"
    android:padding="5dp">

    <ImageView
    android:id="@+id/image_bahan"
    android:src="@drawable/ic_bahan"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_width="60dp"
    android:layout_height="60dp" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_namabahan"
                    android:text="@string/nama_bahan"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- TextView Npm Barang -->
                <TextView
                    android:id="@+id/tv_ketbahan"
                    android:text="@string/keterangan_bahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:text="waktu"
                android:id="@+id/tv_hargabahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:textAlignment="viewEnd" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_editbahan"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:text="@string/edit"
                android:background="@color/green"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_hapusbahan"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@color/red"
                android:layout_marginRight="5dp"
                android:text="@string/hapus"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>